{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ESNext",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "types": ["obsidian-typings"],
    "lib": ["DOM", "ESNext"],
    "jsx": "preserve",
    "outDir": "dist"
  },
  "include": ["src/**/*.ts", "main.ts", "src/**/*.tsx"],
  "exclude": ["src/dom-to-image-more.js", "*.mjs"]
}
